<idea-plugin>
    <id>com.hyc.plugin.egg</id>
    <name>Eggs</name>
    <vendor email="hunag_yicheng@foxmail.com" url="https://github.com/huangdaren1997">hyc</vendor>

    <description><![CDATA[
    Eggs is an IDEA plugin allows you to ....
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>com.hyc.plugin.core.CodeTemplateRepository</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.hyc.plugin.core.CodeTemplateRepository"/>
    </extensions>

    <actions>
        <group id="com.hyc.plugin.action.RunCodeActionGroup"
               class="com.hyc.plugin.action.RunCodeActionGroup"
               text="RunCode" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>